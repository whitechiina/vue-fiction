.hot
    padding 0 1rem
    .hot-title
        display flex
        width 100%;
        height 3.125rem
        line-height 3.125rem
        vertical-align middle
        color #5b5b59
        span
            display block
            height 1.125rem
            width 0.1875rem
            background #43bb57
            vertical-align middle
            margin-right 0.25rem
            margin-top 1rem
        h3
            flex 1
            display inline-block
        p
            font-size 0.8rem
            font-weight normal
            vertical-align baseline
        i
            margin-top 0.2rem
    .hot-content
        margin: 0
        border: 0
        font-size: 100%
        font-weight: normal
        vertical-align: baseline
        .hot-wrap
            width: 100%
            line-height: 3.125rem
            vertical-align: middle
            color: #5b5b59
            .hot-item
                display flex
                border-bottom: 1px solid #f5f5f5;
                .hot-left
                    width: 5.625rem
                    margin-right: 1rem
                    height: 100%
                    img 
                        width: 100%
                        height: 100%
                        border-radius: 0.25rem
                        border: 1px solid #f5f5f5
                .hot-right
                    flex: 1
                    display: flex
                    height: 100%
                    flex-direction: column
                    h1
                        font-size: 1rem
                        color: #101010
                        height: 2rem
                        line-height: 2rem
                        overflow: hidden;
                    p
                        font-size: 0.875rem
                        text-indent: 1.5em
                        color: #9d9d9b
                        line-height: 1.25rem
                        height: 3.6875rem
                        display: -webkit-box
                        display: -moz-box
                        overflow: hidden
                    .book-info
                        flex: 1
                        position: relative
                        width: 100%
                        margin-top 3rem
                        .book-author
                            position: absolute
                            left: 0
                            bottom: 0
                            font-size: 0.75rem
                            color: #9d9d9b
                        .book-des
                            position: absolute
                            right: 0
                            bottom: 0
                            font-size: 0.625rem
                            color: #9d9d9b
                            span 
                                display: inline-block
                                height: 0.75rem
                                line-height: 0.75rem
                                padding: 0 0.125rem
                                border: 1px solid #9d9d9b
                                padding .1rem