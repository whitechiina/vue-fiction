.title
    z-index: 99;
    position fixed
    top 0
    left 0
    right 0
    height 2.75rem
    background #43bb57
    font-size 1.125rem
    color #fff
    text-align center
    line-height 2.75rem
.recent
    width: 100%
    height: 16.125rem
    position: relative
    background: #43bb57
    .recent-content
        width: 70%
        margin: 0 auto
        padding-top: 5.25rem
        display: flex
        .img
            width: 6.375rem
            height: 8.75rem
            img 
                width: 100%
                height: 100%
                border-radius: 0.5rem
        .book-info
            flex: 1
            text-align: left
            width: 152px
            margin-left: 0.5rem
            color: #fff
            line-height: 1.75rem
            font-size: 0.875rem
            h1
                font-size 1.2rem
                font-weight 600
                overflow: hidden
            h2
                margin: 0
                padding: 0
                border: 0
                font-size: 100%
                font-weight: normal
                vertical-align: baseline
            p
                display: -webkit-box
                display: -moz-box
                overflow: hidden
            .next-btn
                width: 5.0625rem
                height: 1.75rem
                margin-top: 0.25rem
                border: 1px solid #fff
                border-radius: 0.25rem
                text-align: center
.library
    background: #fff
    padding: 1.25rem 1rem
    .library-item
        display inline-block
        height: 10.4375rem
        width: 5.6875rem
        margin-bottom: 0.625rem
        margin-right 1.4rem
        float left
        img 
            width: 100%
            height: 7.8125rem
            border: 1px solid #f5f5f5
            border-radius: 0.25rem
        p
            vertical-align: bottom
            width: 100%
            height: 2.625rem
            box-sizing: border-box
            padding-top: 0.625rem
            font-size: 0.75rem
            color: #5b5b59
            text-align: left
            overflow: hidden;
        .library-item-wrapper
            height: 7.8125rem
            line-height: 7.8125rem
            font-size: 2rem
            background: #f0eff5
            border: 1px solid #f5f5f5
            border-radius: 0.25rem
            text-align: center
            i 
                img
                    width 1.4rem
                    height 1.4rem
    .no-book
        z-index 999
        position absolute
        width: 3.666667rem
        height: 2.066667rem
        text-align center
        left: 40%
        top: 60%
        z-index: 200
        background: #43bb57
        display: inline-block
        padding: 0 0.66rem
        color white
        border-radius 1rem
        font-size .8rem
        display: flex;/*设置为弹性容器*/
        align-items: center; /*定义div1的元素居中*/
        justify-content: center; /*定义div1的元素水平居中*/