.title
    position fixed
    top 0 
    left 0
    height 2.75rem
    background #43bb57
    font-size 1.125rem
    color #fff
    text-align center
    line-height 2.75rem
    width 100%
    display: flex
    .back
        position: absolute
        left: 0.8rem
        i
            svg
                color #fff
    .head
        flex 1

.top-wrap
    position fixed
    top 2.75rem
    left 0
    right 0
    font-size: 0.875rem
    color: #5b5b59
    padding: 1rem
    background: #fff
    box-sizing border-box
    .hot
        padding-bottom: 0.5rem
        span
            display: inline-block
            padding: 0.25rem 0.325rem
            margin-right .4rem
            box-sizing: border-box
        .active
            border: 1px solid #43bb57
            border-radius: 0.8125rem
            color: #43bb57   
    .all
        box-sizing border-box
        padding: 0.5rem 0rem
        border-top: 1px solid #ddd
        border-bottom: 1px solid #ddd
        span
            display: inline-block
            padding: 0.25rem 0.325rem
            box-sizing: border-box
            margin-right .4rem
            margin 0.2rem 0.2rem 0rem 0rem
        .active
            border: 1px solid #43bb57
            border-radius: 0.8125rem
            color: #43bb57   
.list
    position fixed
    top 9.6rem
    width: 100%
    height: 100%
    margin-bottom 2.75rem
    overflow: hidden
    overflow-y scroll
    height 100%
    .list-wrap
        ul
            li
                width: 100%
                height: 7.4375rem
                background: #fff
                border-bottom: 1px solid #f5f5f5
                padding: 1rem
                box-sizing: border-box
                display: flex
                .left
                    width: 4rem
                    height: 100%
                    margin-right: 0.75rem
                    img 
                        width: 4rem
                        eight: 100%
                .right
                        flex: 1
                        width: 100%
                        overflow: hidden
                        display: flex
                        flex-direction: column
                        h1
                            height: 1.375rem
                            line-height: 1.375rem
                            width: 100%
                            font-size: 1rem
                            color: #101010
                        p
                            font-size: 0.875rem;
                            text-indent: 1.5em;
                            color: #9d9d9b;
                            line-height: 1.25rem;
                            height: 2.4375;
                            display: -webkit-box;
                            display: -moz-box;
                            -webkit-line-clamp: 2;
                            -moz-line-clamp: 2;
                            -webkit-box-orient: vertical;
                            -moz-box-orient: vertical;
                            overflow: hidden;
                        .bot
                            flex: 1
                            position: relative
                            width: 100%
                            vertical-align: bottom
                            .label
                                position: absolute;
                                left: 0;
                                bottom: 0;
                                font-size: 0.75rem;
                                color: #9d9d9b;
                                span 
                                    color: #9d9d9b;
                            .info
                                position: absolute;
                                right: 0;
                                bottom: 0;
                                font-size: 0.625rem;
                                color: #43bb57;
                                span 
                                    display: inline-block;
                                    height: 0.75rem;
                                    line-height: 0.75rem;
                                    padding: 0 0.125rem;
                                    border: 1px solid #43bb57;
